{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"jsx": "react",
		"types": ["@react-three/fiber", "three", "react", "react-dom"],
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src", "./webpack.config.js"]
}
